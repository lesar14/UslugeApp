<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.UslugeApp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.UslugeApp.AdsOrdered"/>
        <activity android:name="com.example.UslugeApp.AdsToDo" />
        <activity android:name="com.example.UslugeApp.AdDetails" />
        <activity android:name="com.example.UslugeApp.NewAd" />
        <activity android:name="com.example.UslugeApp.ProfileEdit" />
        <activity android:name="com.example.UslugeApp.MyAds" />
        <activity android:name="com.example.UslugeApp.Profile" />
        <activity android:name="com.example.UslugeApp.Register">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.UslugeApp.Login" />
        <activity android:name="com.example.UslugeApp.SearchAds" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>